<?xml version="1.0" encoding="utf-8" ?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1,2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="open..."
            android:textSize="15pt"
            android:padding="3dip"
            android:background="@color/white"
            />
        <TextView
            android:text="CrtO"
            android:textSize="15pt"
            android:gravity="right"
            android:padding="3dip"
            android:background="#B57585"
            />
    </TableRow>
    <TableRow>
        <TextView
        android:layout_column="1"
        android:text="Save As..."
            android:background="#C3E88D"
            android:textSize="15pt"
        android:padding="3dip" />
        <TextView
            android:text="Ctrl-Shift-S"
            android:textSize="15pt"
            android:background="#5E78B2"
            android:gravity="right"
            android:padding="3dip" />

    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />
    <TableRow>
        <TextView
            android:text="X"
            android:padding="3dip"
            android:textSize="15pt"/>

        <TextView
            android:text="Import..."
            android:padding="3dip"
            android:textSize="15pt"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="X"
            android:padding="3dip"
            android:textSize="15pt"/>
        <TextView
            android:text="Export..."
            android:padding="3dip"
            android:textSize="15pt"/>
        <TextView
            android:text="Ctrl-E"
            android:gravity="right"
            android:padding="3dip"
            android:textSize="15pt"/>
    </TableRow>
    <View
        android:layout_height="2dip"
        android:background="#FF909090"/>

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:padding="3dip"
            android:textSize="15pt"/>
    </TableRow>

</TableLayout>